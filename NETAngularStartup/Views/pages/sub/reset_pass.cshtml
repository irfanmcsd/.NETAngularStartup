@using Microsoft.Extensions.Options
@using reCAPTCHA.AspNetCore
@model DevCodeArchitect.Entity.ResetPasswordViewModel

<section class="home-banner home-banner-2 home-banner-3" aria-labelledby="forgot-password-heading">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 col-xl-6">
                <div class="secondary-color p-4 rounded shadow-sm">
                    <h1 class="mb-1 text-center login-heading">Reset Your Password</h1>
                    <p class="text-center text-muted mb-4">Please enter your new password to reset</p>

                    <form asp-controller="Pages" asp-action="ResetPassword"
                          asp-route-culture="@ViewData["culture"]"
                          asp-route-page="@ViewData["page"]"
                          method="post"
                          class="needs-validation" novalidate>

                        <input type="hidden" asp-for="Email" />
                        <div class="row gy-4">
                            @*<div class="col-12">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email" asp-for="Email" class="form-control"
                                       placeholder="name@example.com"
                                       required aria-required="true"
                                       autocomplete="email">
                                <span asp-validation-for="Email" class="invalid-feedback"></span>
                            </div>*@

                            <!-- New Password Field (for when resetting) -->
                            <div class="col-12" id="new-password-field" style="display: none;">
                                <label asp-for="Password" class="form-label">New Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="password" asp-for="Password" class="form-control"
                                           id="password-field"
                                           aria-required="true"
                                           autocomplete="new-password">
                                    <button class="btn btn-outline-secondary toggle-password" type="button"
                                            aria-label="Show password"
                                            data-target="password-field">
                                        <i class="bi bi-eye-slash"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="invalid-feedback"></span>
                            </div>

                            <!-- Confirm Password field with toggle -->
                            <div class="col-12">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control"
                                           id="confirm-password-field"
                                           required aria-required="true"
                                           autocomplete="new-password">
                                    <button class="btn btn-outline-secondary toggle-password" type="button"
                                            aria-label="Show password"
                                            data-target="confirm-password-field">
                                        <i class="bi bi-eye-slash"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                            </div>

                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-lg btn-primary" type="submit" id="submit-button">
                                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                        Reset Password
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="mt-5">
                        <hr class="mb-4 border-secondary-subtle">
                        <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-3">
                            <a asp-controller="Pages" asp-action="Index"
                               asp-route-culture="@ViewData["culture"]"
                               asp-route-page="signin"
                               class="btn btn-outline-primary">
                                Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
